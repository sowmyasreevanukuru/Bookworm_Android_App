<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:id="@+id/card_book_item_fav"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:elevation="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:id="@+id/book_layout"
        >

        <ImageView
            android:id="@+id/b_image_fav"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pdf_img" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remove_fav"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_favorite_24"
            android:padding="5dp"

            />
        <TextView
            android:id="@+id/txtbookname_item_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/b_image_fav"
            android:text="Book Name"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtbookauthor_item_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtbookname_item_fav"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/b_image_fav"
            android:text="Author name"
            android:textColor="@color/black1"
            android:textSize="14dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtbookcateogry_item_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtbookauthor_item_fav"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/b_image_fav"
            android:text="Category name"
            android:textColor="@color/black1"
            android:textSize="14dp" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>